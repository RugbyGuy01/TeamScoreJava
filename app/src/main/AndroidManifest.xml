<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.golfpvcc.teamscore">

    <application
        android:name=".AppTeamCard"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainSummaryActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CourseList"
            android:label="@string/title_activity_course_list"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PlayerSetup"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_player_setup"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".DisplayScoreCardDetail"
            android:screenOrientation="landscape"></activity>

    </application>

</manifest>