<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#258e1c"
    tools:context="com.golfpvcc.teamscore.CourseList">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.golfpvcc.teamscore.Adapters.CourseListRecyclerView
        android:id="@+id/course_list_recycler_view"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="12dp"
        android:paddingEnd="24dp"
        />

    <include
        android:id="@+id/empty_course"
        layout="@layout/empty_course_list" />

</RelativeLayout>