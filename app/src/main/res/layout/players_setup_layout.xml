<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/player_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Player Setup"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_setup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Course Name" />


        <EditText
            android:id="@+id/player_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/player_setup"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName|textCapWords"
            android:maxLength="7"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/handicap_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/player_1"
            android:layout_alignBottom="@+id/player_1"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/player_setup"
            android:ems="10"
            android:hint="Hdcap"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="2"
            android:maxLines="1"
            android:digits="01234567890"
            />

        <EditText
            android:id="@+id/player_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/player_1"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName|textCapWords"
            android:maxLength="7"
            android:maxLines="1" />

        <EditText
            android:id="@+id/handicap_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/player_2"
            android:layout_alignBottom="@+id/player_2"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/player_setup"
            android:ems="10"
            android:hint="Hdcap"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="2"
            android:digits="01234567890"
            android:maxLines="1" />

        <EditText
            android:id="@+id/player_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/player_2"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName|textCapWords"
            android:maxLength="7"
            android:maxLines="1" />

        <EditText
            android:id="@+id/handicap_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/player_3"
            android:layout_alignBottom="@+id/player_3"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/player_setup"
            android:ems="10"
            android:hint="Hdcap"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="2"
            android:digits="01234567890"
            android:maxLines="1" />

        <EditText
            android:id="@+id/player_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/player_3"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName|textCapWords"
            android:maxLength="7"
            android:maxLines="1" />

        <EditText
            android:id="@+id/handicap_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/player_4"
            android:layout_alignBottom="@+id/player_4"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/player_setup"
            android:ems="10"
            android:hint="Hdcap"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="2"
            android:digits="01234567890"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_4"
            android:layout_marginTop="40dp"
            android:background="#3b9aa9"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="9">

            <Button
                android:id="@+id/selectGame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="3"
                android:text="New Game"
                tools:ignore="RtlHardcoded" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Cancel" />

            <Button
                android:id="@+id/update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Update" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>