    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/courseSetupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:hint="@string/course_name"
            android:inputType="textPersonName|textCapWords"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:id="@+id/courseSetupButSave"
            android:layout_below="@id/courseSetupName"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use"
            android:id="@+id/courseSetupButUse"
            android:layout_below="@id/courseSetupName"
            android:layout_toEndOf="@id/courseSetupButSave" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/courseSetupButCancel"
            android:layout_below="@id/courseSetupName"
            android:layout_toEndOf="@id/courseSetupButUse"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flip"
            android:id="@+id/courseSetupButFlip"
            android:layout_below="@id/courseSetupName"
            android:layout_toEndOf="@id/courseSetupButCancel"
            />

    </RelativeLayout>


